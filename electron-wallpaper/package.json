{
	"name": "commoner-wallpaper",
	"version": "1.1.0",
	"description": "A good-looking desktop wallpaper that can be switched at will",
	"main": "./src/main/main.js",
	"scripts": {
		"dev": "electron .",
		"electron:build": "electron-builder"
	},
	"repository": "https://github.com/electron/electron-quick-start",
	"keywords": [
		"Electron",
		"quick",
		"start",
		"tutorial",
		"demo"
	],
	"author": "Commoner",
	"license": "CC0-1.0",
	"dependencies": {
		"@electron/remote": "^2.0.9",
		"electron-as-wallpaper": "^0.0.2-dev"
	},
	"devDependencies": {
		"electron": "^24.1.1",
		"electron-builder": "^23.6.0",
		"electron-reloader": "^1.2.3"
	},
	"build": {
		"appId": "com.wallpaper.app",
		"productName": "CommonerWallpaper",
		"copyright": "Copyright © 2023 Qiu",
		"mac": {
			"category": "public.app-category.utilities"
		},
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				}
			],
			"icon": "./public/logo.ico",
			"publish": [
				{
					"provider": "generic",
					"url": "http://39.106.29.92:8789/"
				}
			]
		},
		"nsis": {
			"oneClick": false,
			"perMachine": true,
			"allowElevation": true,
			"allowToChangeInstallationDirectory": true,
			"installerIcon": "./public/logo.ico",
			"uninstallerIcon": "./public/icon.ico",
			"installerHeaderIcon": "./public/icon.ico",
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"displayLanguageSelector": true,
			"shortcutName": "布衣壁纸"
		},
		"directories": {
			"output": "dist_electron"
		},
		"files": [
			"dist/electron/**/*",
			"./src/**/*",
			"./public/**/*"
		],
		"extends": null,
		"extraResources": {
			"from": "./extraResources/",
			"to": "extraResources"
		}
	}
}
